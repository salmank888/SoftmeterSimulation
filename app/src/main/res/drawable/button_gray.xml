<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
        	<solid
        		android:color="@color/softnn_green" />
            <stroke
                android:width="1dp"
                android:color="@color/strock" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
    <item android:state_enabled="false" >
        <shape>
            <solid
                android:color="@color/softnn_green" />
            <stroke
                android:width="1dp"
                android:color="@color/strock" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />

        </shape>

    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/strock"
                android:centerColor="@color/softn_green"
                android:endColor="@color/strock"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/softnn_green" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
</selector>